/* pages/index/detail/play/play.wxss */
.box{
  height: 100vh;  
  width: 100vw;
  position: relative;
  background: rgba(0,0,0,.2);
  /* overflow: hidden; */
}
.bg{
  position: absolute;
  height: 100vh;
  width: 100vw;
  top: 0px;
  left: 0px;
  z-index: -1;
  filter: blur(15px);
}
.play_top{
  height: 170rpx;
  background: rgba(0,0,0,.1);
  color: white;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.play_title{
  display: flex;  
}
.singer_name{
  font-size: 32rpx;
}
.play_top image.singer_img{
  width:120rpx;
  height: 120rpx;
  margin:0 30rpx;
}
.play_top image.play{
  width: 100rpx;
  height: 100rpx;
  margin-right: 40rpx;
}
.singer_name{
  flex-direction: column;
}
.song_name{
  width: 390rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.play_controller{
  width: 100vw;
  height: 310rpx;
  background: white;
  /* background: transparent; */
  position: fixed;
  bottom: 0rpx; 
  left: 0;
}
.icon_controller{
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  top:20rpx;
}
.icon_l{
  left: 30rpx;
}
.icon_r{
  right: 30rpx;
}
.icon_controller image{
  width: 100%;
  height: 100%;
}